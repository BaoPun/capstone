<Window x:Class="alert_center.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:alert_center"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <ListBox Name="alerts" ItemsSource="{Binding}" Width="300" HorizontalAlignment="Left">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Image Width="25" Height="25"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Name="subreddit" Width="100" Height="30" Text="{Binding website}"/>
                            <TextBlock Width="100"/>
                            <TextBlock Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Width="100" Height="30" Content="get reddit post" Click="get_reddit_post"/>
    </Grid>
</Window>
